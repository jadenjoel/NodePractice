<!DOCTYPE html>
<html lang="en">

    <%- include("./partials/head.ejs") %>


<body class="font-body text-center">

    <%- include("./partials/nav.ejs") %>

    <div class="pt-4 px-4">
        <h2 class="text-4xl font-bold pb-4">All blogs</h2>

        <% if (blogs.length > 0){ %>
        <% blogs.forEach(blog => { %>
            <div class="shadow-sm text-2xl">
         <a href="/blogs/<%= blog._id %>">  
        <h3 class="hover:text-teal-400 font-bold"><%= blog.title %></h3>
        <p class="pb-4"><%= blog.snippet %></p>
        </a>
        </div>
        <% } ) %>
        <% } else {%>
        <p>No new blogs, today</p>
        <% } %>

        <pre><%= JSON.stringify(user,null,2)%></pre>

    </div>

    <%- include("./partials/footer.ejs") %>

</body>

</html>